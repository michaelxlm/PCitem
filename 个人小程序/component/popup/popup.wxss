.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 670rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}

.wx-popup-title {
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  font-size: 36rpx;
  background: #558adc;
  color: #ffffff;
}

.wx-popup-con {
  margin: 60rpx 96rpx;
  font-size: 30rpx;
  color: #363636;
}
.wx-popup-con text{
  width: 100%;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 222rpx;
  height: 80rpx;
  border: 2rpx solid #9fc8f8;
  border-radius: 8rpx;
  background: #558adc;
  font-size: 36rpx;
  color: #ffffff;
}
.wx-popup-btn .btn-no{
  background: #dddddd;
  border: 2rpx solid #dddddd;
  color: #4f4f4f;
}