.container-login{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login-wrapper{
  width: 571rpx;
  padding: 12rpx 52rpx;
  background: #568add;
  border-radius: 10rpx;
  margin-top: -84rpx;
}
.free-text{
  height: 120rpx;
  line-height: 120rpx;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}
.input-wrapper{
  display: flex;
  border-bottom: 3rpx solid #5d96ec;
}
.input-wrapper input{
  height: 90rpx;
  line-height: 90rpx;
  color: #ffffff;
  font-size: 26rpx;
}
.place-holder{
  color: #ffffff;
}
.input-wrapper .input-code{
  width: 418rpx;
}
.btn-code{
  width: 152rpx;
  height: 62rpx;
  line-height: 62rpx; 
  padding: 0;
  background: #6ca0eb;
  border-radius: 5rpx;
  border: 2rpx solid #9fc7f8;
  color: #ffffff;
  font-size: 22rpx;
  margin-top: 14rpx;
}
.btn-next{
  height: 88rpx;
  line-height: 88rpx;
  background: #6ca0eb;
  border-radius: 5rpx;
  border: 3rpx solid #9fc7f8;
  color: #ffffff;
  margin: 30rpx 0;
  font-size: 36rpx; 
}
.btn-code::after,
.btn-next::after{
  border: none;
}