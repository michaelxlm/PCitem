page{
  background-color: #f3f3f3;
  height: 100%;
}
.useFail {
  text-align: center;
  padding: 100rpx 0 130rpx;
  background-color: #fff;
}

.useFail .top {
  padding-bottom:210rpx;

}
.useFail .top text{
  font-weight: 600;
}
.useFail .top image {
  height: 156rpx;
  width: 171rpx;
}
.useFail .text{
  display: block;
  font-size: 30rpx;
  color: #393939;
}
.useFail button{
  width:222rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #4f4f4f;
  background: #f4f4f4;
  border-radius: 8rpx;
  margin-top:62rpx;
  border:2rpx solid #9fc8f8;
}
.useFail button::after{
  border: none;
}
.rule{
  width: 100%;
  height: 144rpx;
  line-height: 144rpx;
  color: #556ee9;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
}