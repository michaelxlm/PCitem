.mine .header {
    height: 300rpx;
    color: #fff;
    padding: 5%;
    box-sizing: border-box;
    font-size: 48rpx;
}

.mine .mineButton {
    width:38%;
    border:1px solid #fff;
    color:#fff;
    background-color:#4d6ff2;
    margin-top:10%;
}

.mine .mineIconLefta {
    width: 36rpx;
    vertical-align: middle;
    margin: 0 20rpx;
}
.mine .mineIconLeftb {
    width: 30rpx;
    vertical-align: middle;
    margin: 0 20rpx;
}

.mine .mineIconRight {
    width: 16rpx;
    float: right;
    margin:26rpx 40rpx;
}

.mine .imgBlackGround {
    width: 100%;
    height: 300rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.mine .headImg {
    border-radius: 100%;
    overflow: hidden;
    height: 124rpx;
    margin: 0 0 20rpx 90rpx;
    width: 120rpx;
}

.mine .headImg image {
    width: 100%;
    height: 100%;
}

.mine .userList {
    padding: 0 5%;
    width: 90%;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-top:15rpx;
}

.mine .userList view {
    width: 100%;
    margin-top: 4%;
    border: 1px solid #E3E3E3;
}